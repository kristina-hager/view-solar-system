<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
    android:id="@+id/show_empty_system"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick="showEmptySystem"
    android:text="@string/button_show_empty_system" />

    <Button
        android:id="@+id/show_solar_system_result"
        android:layout_below="@id/show_empty_system"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showSolarSystemWithResult"
        android:text="@string/button_show_solar_system_result" />

    <TextView
        android:id="@+id/result_message"
        android:layout_below="@id/show_solar_system_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
